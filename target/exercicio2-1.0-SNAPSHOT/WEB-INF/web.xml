<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.exercicios.exercicio2.code.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Menu</servlet-name>
        <servlet-class>com.exercicios.exercicio2.code.Menu</servlet-class>
        <init-param>
            <param-name>senha</param-name>
            <param-value>12345</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>sair</servlet-name>
        <servlet-class>com.exercicios.exercicio2.code.sair</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErroDeJava</servlet-name>
        <servlet-class>com.exercicios.exercicio2.code.ErroDeJava</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/WelcomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/Menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sair</servlet-name>
        <url-pattern>/sair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErroDeJava</servlet-name>
        <url-pattern>/ErroDeJava</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/erroHtml.html</location>
    </error-page>
</web-app>
